{
  "manifest_version": 2,

  "name": "CommentBuddy",
  "description": "Copy stored comments to clipboard",
  "version": "0.2",
  "browser_action": {
    "default_icon": "cb.png",
    "default_popup": "popup.html",
    "default_title": "Copy stored comments to clipboard"
  },
  "permissions": [
    "storage",
    "clipboardWrite" 
  ],
  "icons": {
     "16": "cb.png"
   },
   "options_ui": {
    "page": "options.html",
    "chrome_style": true
   }
}